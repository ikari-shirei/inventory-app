extends layout

block content
  h1 Do you really want to delete this item?
  hr
  div
    div
      h2= 'Description: '
      p= item.description || 'This item has no description'
    div
      h2= 'Category: ' 
      a(href='/categories/' + item.category._id)= item.category.name
    div
      h2= 'Number in stock: ' 
      p= item.number_in_stock
    div
      h2= 'Price: ' 
      p= '$' + item.price
  
  div
    hr
    form(method="POST", action='' ) 
      button(type="submit") Yes



